<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        account register
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input
              type="text"
              name="name"
              class="form-control mb-2"
              id=""
              placeholder="name"
              value="{{name}}"
            />
          </div>
          <div class="form-group">
            <input
              type="email"
              name="email"
              class="form-control mb-2"
              id=""
              placeholder="email"
              value="{{email}}"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              name="password"
              class="form-control mb-2"
              id=""
              placeholder="password"
              value="{{password}}"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              name="confirm_password"
              class="form-control mb-2"
              id=""
              placeholder="confirm password"
              value="{{confirm_password}}"
            />
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">
              SignUp
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>