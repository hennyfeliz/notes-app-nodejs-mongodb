<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>crate a new note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="POST">
        <div class="form-group">
          <input
            type="text"
            name="title"
            id=""
            class="form-control mb-2"
            placeholder="Title"
            autofocus
          />
        </div>
        <div class="form-group">
          <textarea
            name="description"
            class="form-control mb-2"
            placeholder="Description"
          ></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block w-100" type="submit">save</button>
        </div>
      </form>
    </div>
  </div>
</div>